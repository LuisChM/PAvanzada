@model IEnumerable<Proyecto.Models.Materia>

@{
    ViewBag.Title = "Materias";
}

<h2>Materias</h2>

<p>
    @Html.ActionLink("Agregar nueva materia", "Crear", "Materia", new { @class = "btn btn-primary" })
</p>
<div style="overflow-x:auto;">
    <table class="table table-striped text-center">
        <thead class="thead-dark">
            <tr>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.IdMateria)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.DescripcionMateria)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.IdInstitucion)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.Estado)
                </th>
                <th scope="col"
                    >Accion</th>
            </tr>
        </thead>

        <tbody>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.IdMateria)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DescripcionMateria)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IdInstitucion)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Estado)
                    </td>
                    <td>
                        @Html.ActionLink("Editar", "Editar", new { id = item.IdMateria }, new { @class = "btn btn-primary btn-sm" })
                        @Html.ActionLink("Detalle", "Detalle", new { id = item.IdMateria }, new { @class = "btn btn-info btn-sm" })
                        @Html.ActionLink("Eliminar", "Eliminar", new { id = item.IdMateria }, new { @class = "btn btn-danger btn-sm" })
                    </td>
                </tr>
            }
        </tbody>


    </table>
</div>